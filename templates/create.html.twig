{% extends 'base.html.twig' %}

{% block body %}

    {% for flash_message in app.session.flashBag.get('create') %}
        <div class="alert alert-success alert-dismissible">
            <button class="close" data-dismiss="alert">&times;</button>
            <strong>{{ flash_message }}</strong>
        </div>
    {% endfor %}
{% endblock %}