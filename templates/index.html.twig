{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        {% for notice_message in app.session.flashBag.get('notice') %}
            <div class="alert alert-success alert-dismissible">
                <button class="close" data-dismiss="alert">&times;</button>
                <strong>{{ notice_message }}</strong>
            </div>
        {% endfor %}

        {% for update_message in app.session.flashBag.get('update') %}
            <div class="alert alert-success alert-dismissible">
                <button class="close" data-dismiss="alert">&times;</button>
                <strong>{{ update_message }}</strong>
            </div>
        {% endfor %}

        <div class="row">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}